<% subtotal = 0%>
<% if @current_cart.length > 0 %>
    <table class="Table-cart">
    <tr>
        <th>Name</th>
        <th>Price per unit</th>
        <th>Quantity</th>
    </tr>
    <% @current_cart.each do |current_item| %>
        <% item=MenuItem.find(current_item["id"].to_i) %>
        <tr>
            <td><%= item[:name] %></td>
            <td><%= item[:price] %></td>
            <td><%= current_item["quantity"].to_i %></td>
        </tr>
        <% subtotal=subtotal+ ((item[:price].to_i)*(current_item["quantity"].to_i)) %>
    <% end %>
    </table>
    <% if @offline_bill%>
        <h2>Total(inclusive of 5% taxes):<%= subtotal*1.05 %></h2>
        <%= form_with(url: "/order_items",method:"POST",class: "ConfirmOrder") do %>
            <%= button_tag 'Confirm order',type:'submit',class:'ConfirmOrder-button'%>
        <% end %>
    <% else %>
        <p>Delivery-charge:25</p>
        <h2>Total(inclusive of 5% taxes):<%= (subtotal*1.05)+25 %></h2>
        <%= form_with(url: "/order_items",method:"POST",class: "ConfirmOrder") do %>
            <%= text_field_tag 'address',nil,placeholder:'Address',class:'Order-address'%>
            <%= button_tag 'Confirm order',type:'submit',class:'ConfirmOrder-button'%>
        <% end %>
    <% end %>
<% else %>
    <h2>Oops! Your cart is empty </h2>
<% end %>    
<%= link_to "Edit order", menu_items_path %>
<hr>