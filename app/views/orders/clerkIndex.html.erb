<main class="OrdersPageMain" style="background: none; color: #000000">
  <div class="OrdersPage" style="max-width: 700px; font-size: 22px;">
    <%= link_to "Offline billing", "/menu_items",class:'LoginPage-redirect', method:"get", style: "font-size: 32px" %>
    <h2 class="HomePage-offersTitle">Orders placed:</h2>
    <%= render partial: "order-template", locals:{
    orders_info: @orders_info.select{|order| order.status=="Order placed"},
    order_items_info: @order_items_info,
    button_message: "Mark as 'Out for delivery'"} %>
    <hr>
    <h2 class="HomePage-offersTitle">Orders out for delivery</h2>
    <%= render partial: "order-template", locals:{
    orders_info: @orders_info.select{|order| order.status=="Out for delivery"},
    order_items_info: @order_items_info,
    button_message: "Mark as 'Delivered'"} %>
    <hr>
    <h2 class="HomePage-offersTitle">Orders delivered</h2>
    <%= render partial: "order-template", locals:{
    orders_info: @orders_info.select{|order| order.status=="Delivered"},
    order_items_info: @order_items_info,
    button_message: nil} %>
  </div>
</main>
