<!DOCTYPE html>
<html>
  <head>
    <title>Hotel Untitled</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="Navbar">
      <div class="Navbar-content">
        <%= link_to  "/" do %>
          <% image_tag "home.svg", class: "Navbar-icon"%>
        <% end %>
      </div>
      <div>
        <div class="Navbar-content">
          <% if @current_user %>
            <p class="AppHeader-title"> Hello <%= @current_user.first_name %>!</p>
            <p> | </p>
            <%= link_to "Sign-out", destroy_session_path, method: :delete, class: "AppHeader-signout" %>
          <% else %>
            <%= link_to "Sign in", new_session_path, class: "Navbar-loginLink" %>
            <p>|</p>
            <%= link_to "Sign up", new_user_path, class: "Navbar-loginLink" %>
          <% end %>
        </div>
        <div class="Navbar-content">
          <%= link_to order_items_path do %>
            <% image_tag "cart.svg", class: "Navbar-icon"%>
          <% end %>
        </div>
      </div>
    </div>
    <%= yield %>
    <div>
      <p>All rights reserved</p>
    </div>
  </body>
</html>
